{% extends 'PPEGSBBundle::layout.html.twig' %}

{% block title %}GSB - Nouveau rapport{% endblock %}

{% block body %}

<div class="container">
    <form class="form" method = 'post'>
    	<div class="row">
    		<legend>Nouvelle activit√© complementaire</legend>
                    {# Date #}
                    <div class="col-md-3 col-xs-6" style="margin-top: 10px;">
                        {{ form_label(form.dateAct, 'Date', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.dateAct, {'attr': {'class': 'form-control input-sm'}} )}}
                        {{ form_errors(form.dateAct) }}
                    </div>
                    
                    {# Montant #}
                    <div class="col-md-1 col-xs-1" style="margin-top: 10px;">
                        {{ form_label(form.montantAct, 'Montant', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.montantAct, {'attr': {'class': 'form-control input-sm'}} )}}
                        {{ form_errors(form.montantAct) }}
                    </div>

                    {# Theme #}
                    <div class="col-md-4 col-xs-6" style="margin-top: 10px;">
                        {{ form_label(form.themeAct, 'Theme', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.themeAct, {'attr': {'class': 'form-control input-sm'}} )}}
                        {{ form_errors(form.themeAct) }}
                    </div>

                </div>
        
                <div class="row">
                    {# Lieu #}
                    <div class="col-md-4 col-xs-6" style="margin-top: 10px;">
                        {{ form_label(form.lieuAct, 'Lieu', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.lieuAct, {'attr': {'class': 'form-control input-sm'}} )}}
                        {{ form_errors(form.lieuAct) }}
                    </div>
                    
                </div>
        
                <div class="row">
                    {# Organisateurs #}
                    <div class="col-md-4 col-xs-12" style="margin-top: 10px;">
                        {{ form_label(form.matriculePraticien, 'Praticiens', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.matriculePraticien, {'attr': {'class': 'form-control'}} )}}
                        {{ form_errors(form.matriculePraticien) }}
                    </div>
                    {# Co-Organisateurs #}
                    <div class="col-md-4 col-xs-12" style="margin-top: 10px;">
                        {{ form_label(form.matriculeColOrg, 'Co-Organisateurs', {'label_attr': {'class': 'control-label'}}) }}
                        {{ form_widget(form.matriculeColOrg, {'attr': {'class': 'form-control'}} )}}
                        {{ form_errors(form.matriculeColOrg) }}
                    </div>
                </div>
        
                <div class="row" style='margin-top: 10px;'>
                    <div class="col-md-8 col-xs-12">{# Submit #}
                        {{form(form)}}
                    </div>
                </div>
        </div>
    </form>
</div>


{% endblock %}

{% block inlinejs %}
	<script>
	  	$('#ppe_gsbbundle_activitecomplementaire_dateAct').datetimepicker({
		    lang:'fr',
		    timepicker:false,
		    format:'d/m/Y'
		});
	</script>
{% endblock %}