{% extends 'PPEGSBBundle::layout.html.twig' %}

{% block title %}GSB - Liste des rapports{% endblock %}

{% block body %}

<div class="container listeRP">
	{% for act in activites %}
		<div onclick="document.location = '{{ path ("ppegsb_getFicheAct", {"id": act.numAct} ) }}'" class="col-md-2 col-sm-3 col-xs-6" id="rapport">
				<div class="well" id="rpContent">
					<legend>N°{{act.numAct}} <span style="float: right;font-size: 70%;margin-top: 5px;">{{act.dateAct|date("d/m/Y")}}</span></legend>
					<p>Organisée par <b>{{act.matriculeColAct.nomCol}} {{act.matriculeColAct.prenomCol}}</b></p>
				</div>
		</div>
	{% endfor %}
</div>



{% endblock %}