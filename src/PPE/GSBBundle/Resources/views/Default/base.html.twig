{# src/PPE/GSBBundle/Resources/views/Default/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8 />
        <title>{% block title %}GSB{% endblock %}</title>
        {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/bootstrap.css') }}" type="text/css" media="all" />
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/jquery.datetimepicker.css') }}" type="text/css" media="all" />
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/maplace.css') }}" type="text/css" media="all" />
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/style.css') }}" type="text/css" media="all" />
        {% endblock %}
    </head>
    <body>
        <section id = "head">
        {% block navigation %}
            <div class="navbar navbar-default navbar-static-top" role="navigation">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                  
                    <a class="navbar-brand" href="{{ path('ppegsb_homepage' ) }}">Application GSB</a>
                    
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('ppesgb_listePra') }}">Praticiens</a></li>
                        <li><a href="{{ path('ppesgb_listeMed') }}">Medicaments</a></li>
                        <li><a href="#">Carte</a></li>
                        <li><a href="{{ path('ppegsb_homepage' ) }}">Mes rapports</b></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" style="margin-top: 10px; margin-right: 10px;">      
                        <a href="{{ path('ppegsb_newFicheRp') }}"><button type="button" class="btn btn-primary">Nouveau Rapport</button></a>
                        <a href="#"><button type="button" class="btn btn-danger">Deconnexion</button></a>
                    </ul>
                </div><!--/.nav-collapse -->
                <div class="nav navbar-nav navbar-right" id="bouton-deco-new">
                </div>
            </div>  
        {% endblock %}
        </section>


        <section class="content">
        {% block body %}
        {% endblock %}
        </section>


        <section id="foot">
        {% block footer %}
           <!--  GSB - JUJU - CLECLE - MOMO -->
        {% endblock %}
        </section>

        <!-- javascripts -->
        {% block javascripts %}
        <script src="{{ asset('bundles/ppegsb/js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/ppegsb/js/jquery-ui.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/bootstrap.min.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/jquery.datetimepicker.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/maplace.min.js') }}" type="text/javascript" ></script>
        {% endblock %}   

        {% block inlinejs %}
        {% endblock %}

    </body>
</html>

