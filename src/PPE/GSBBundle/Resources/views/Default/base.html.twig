{# src/PPE/GSBBundle/Resources/views/Default/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset=utf-8 />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}GSB{% endblock %}</title>
        {% block stylesheets %}
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/bootstrap.css') }}"/>
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/jquery.datetimepicker.css') }}"/>
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/maplace.css') }}"/>
                <link rel="stylesheet" href="{{ asset('bundles/ppegsb/css/style.css') }}"/>
        {% endblock %}
    </head>
    <body>
        <section id = "head">
        {% block navigation %}
            <div class="navbar navbar-default navbar-static-top" role="navigation" id="onDesktop">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                  
                    <a class="navbar-brand" href="{{ path('ppegsb_homepage' ) }}">Application GSB</a>
                    
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('ppegsb_listePra') }}">Praticiens</a></li>
                        <li><a href="{{ path('ppegsb_listeMed') }}">Medicaments</a></li>
                        <li><a href="{{ path('ppegsb_mapPra') }}">Carte</a></li>
                        <li><a href="{{ path('ppegsb_homepage' ) }}">Mes rapports</b></a></li>
                        <li><a href="{{ path('ppegsb_listActComp' ) }}">Activités</b></a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right" style="margin-top: 10px; margin-right: 10px;">      
                        <a href="{{ path('ppegsb_newFicheRp') }}"><button type="button" class="btn btn-primary"  id="btnTooltipRP" data-toggle="tooltip" data-placement="bottom" title="Nouveau rapport" ><span class="glyphicon glyphicon-edit"></span></button></a>
                        <a href="{{ path('ppegsb_formActComp') }}"><button type="button" class="btn btn-info" id="btnTooltipAct" data-toggle="tooltip" data-placement="bottom" title="Nouvelle activité complémentaire"><span class="glyphicon glyphicon-check"></span></button></a>
                        <a href="{{ path('ppegsb_logout') }}"><button type="button" class="btn btn-danger" id="btnTooltipOff" data-toggle="tooltip" data-placement="left" title="Deconnexion"><span class="glyphicon glyphicon-off"></span></button></a>
                    </ul>
                </div><!--/.nav-collapse -->
                <div class="nav navbar-nav navbar-right" id="bouton-deco-new">
                </div>
            </div>  
        {% endblock %}
        {% block navigationMobile %}
            <div class="navbar navbar-default navbar-static-top" role="navigation" id="onMobile" style="visibility:hidden;">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="{{ path('ppegsb_homepage' ) }}">Application GSB</a>
                </div>
                 <div class="navbar-collapse collapse" id="miniMenu">   
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row" id="miniMenu">
                                    <center>
                                        <div class="row">
                                            <div class="col-xs-6 col-md-6">
                                              <a href="{{ path('ppegsb_homepage' ) }}" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-list"></span> <br/>Mes rapports</a>
                                              <a href="{{ path('ppegsb_newFicheRp') }}" class="btn btn-warning btn-lg" role="button"><span class="glyphicon glyphicon-edit"></span> <br/>Nouveau</a>
                                              <a href="{{ path('ppegsb_listActComp') }}" class="btn btn-info btn-lg" role="button"><span class="glyphicon glyphicon-signal"></span> <br/>Activités</a>
                                              <a href="{{ path('ppegsb_formActComp') }}" class="btn btn-success btn-lg" role="button"><span class="glyphicon glyphicon-check"></span> <br/>Nouvelle activité</a>
                                            </div>
                                            <div class="col-xs-6 col-md-6">
                                              <a href="{{ path('ppegsb_listePra') }}" class="btn btn-success btn-lg" role="button"><span class="glyphicon glyphicon-user"></span> <br/>Praticiens</a>
                                              <a href="{{ path('ppegsb_logout') }}" class="btn btn-danger btn-lg" role="button"><span class="glyphicon glyphicon-off"></span> <br/>Déconnexion</a>
                                              <a href="{{ path('ppegsb_listeMed') }}" class="btn btn-info btn-lg" role="button"><span class="glyphicon glyphicon-book"></span> <br/>Médicaments</a>
                                              <a href="{{ path('ppegsb_mapPra') }}" class="btn btn-primary btn-lg" role="button"><span class="glyphicon glyphicon-map-marker"></span> <br/>Carte</a>
                                            </div>
                                        </div>
                                    </center>
                                </div>
                            </div>
                    </div>
                </div><!--/.nav-collapse -->
                <div class="nav navbar-nav navbar-right" id="bouton-deco-new">
                </div>
            </div>  
        {% endblock %}
        </section>


        <section class="content">
        {% block body %}
        {% endblock %}
        </section>


        <section id="foot">
        {% block footer %}
           <!--  GSB - JUJU - CLECLE - MOMO -->
        {% endblock %}
        </section>

        <!-- javascripts -->
        {% block javascripts %}
        <script src="{{ asset('bundles/ppegsb/js/jquery.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/ppegsb/js/jquery-ui.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/bootstrap.min.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/jquery.datetimepicker.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/maplace.min.js') }}" type="text/javascript" ></script>
        <script src="{{ asset('bundles/ppegsb/js/sorttable.js') }}" type="text/javascript" ></script>
        <script>
            $(document).ready(function() {
                // Optimalisation: Store the references outside the event handler:
                var $window = $(window);
                var $menuMobile = $('#onMobile');
                var $menuDesktop = $('#onDesktop');
                var $miniMenu = $('#miniMenu');

                function checkWidth() {

                    var windowsize = $window.width();
                    if (windowsize < 767) {
                        $menuMobile.show();
                        $menuMobile.css('visibility', 'visible');
                        $menuDesktop.hide();
                        // $miniMenu.show();

                    }
                    else {
                        // $miniMenu.hide();
                        $menuMobile.hide();
                        $menuDesktop.show();
                    }
                }
                // Execute on load
                checkWidth();
                // Bind event listener
                $(window).resize(checkWidth);
            });

            $('#btnTooltipRP').tooltip()
            $('#btnTooltipAct').tooltip()
            $('#btnTooltipOff').tooltip()
        </script>
        {% endblock %}   

        {% block inlinejs %}
        {% endblock %}

    </body>
</html>
