{% extends 'PPEGSBBundle::layout.html.twig' %}

{% block title %}GSB - Connexion{% endblock %}

{% block navigation %}{% endblock %}


{% block body %}
		<div class="col-md-6 col-md-offset-3 well" id = "formConnexion">
			<form action="{{ path('ppegsb_logincheck') }}" method="post">
				<h2>Connectez-vous</h2>
				<input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Matricule" required autofocus>
				<input type="password" id="password" name="_password" class="form-control" placeholder="Mot de passe" required>
				<button class="btn btn-primary col-md-6 col-md-offset-3" type="submit">Connexion</button>
			</form>
			<div class="col-md-12" id = "formConnexionFooter">
				<a href="#">Contact administration</a>
				<a href="#"> - Application GSB</a>
			</div>
		</div>
{% endblock %}