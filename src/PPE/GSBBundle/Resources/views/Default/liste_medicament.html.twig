{% extends 'PPEGSBBundle::layout.html.twig' %}

{% block title %}GSB - Liste des médicaments{% endblock %}

{% block body %}
		 <div class="table-responsive">
			 <table class="table table-hover sortable table-striped">
			 	<!-- Entête du tableau -->
			 	<thead> 
			 		<tr>
			 			<th>INFOSISI</th>
			 			<th>Depot legal</th>
			 			<th>Nom commerciale</th>
			 			<th>Famille</th>
			 			<th>Prix échantillon</th>
			 		</tr>
			 	</thead>
	 			<tbody>
				{% for medicament in medicaments %}
					<tr>
						<th><a href="{{ path('ppegsb_ficheMed', {'id':medicament.depotLegal})}}">INFOSISI</a></th>
						<td>{{medicament.depotLegal}}</td>
						<td>{{medicament.nom}}</td>
						<td>{{medicament.codeFamille.libelleFamille}}</td>
						<td>{{medicament.prixechantillon}}</td>
					</tr>
				{% endfor %}
				</tbody>
			 	<!-- fin de l'entête -->
			 </table>

{% endblock %}


